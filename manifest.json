{
  "manifest_version": 2,
  "name": "Hoarder Firefox",
  "version": "1.0",
  "description": "Extension for https://github.com/hoarder-app/hoarder",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Hoarder Firefox",
    "default_popup": "popup/popup.html"
  }
}